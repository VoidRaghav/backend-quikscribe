# QuikScribe Backend Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=QuikScribe Backend
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://quikscribe_user:quikscribe_password@localhost:5432/quikscribe

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Authentication Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration (for Google Bot)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Google Bot Settings
GOOGLE_BOT_MEETING_ID=test-meeting-id
GOOGLE_BOT_UUID=test-uuid
GOOGLE_BOT_DYNAMIC_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
FRONTEND_ALLOWED_ORIGINS=http://107.21.72.71:3000
FRONTEND_URL=http://107.21.72.71:3000
DB_HOST=localhost
